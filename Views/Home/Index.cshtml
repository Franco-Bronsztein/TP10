

@foreach (var item in ViewBag.Series)
{
    <div class="card" style="width: 18rem;">
        <img src="@item.ImagenSerie" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title"> @item.Nombre</h5>
            <p class="card-text">@item.Sinopsis</p>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="mostrarSeries(@item.IdSerie)">Detalle Serie</button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="mostrarTemporadas(@item.IdSerie)">Temporadas</button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="mostrarActores(@item.IdSerie)">Actores</button>
        </div>
    </div>

}


<div class="modal fade" tabindex="-1" id="ModalSerie">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="Nombre"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <div class="modal-body">
          <p id="InfoSerie"></p>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Close </button>  
      </div>
    </div>
  </div>
</div>


